<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".views.faq.FAQPage">

    <!-- Title Section -->
    <LinearLayout
        android:id="@+id/title_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Main Title -->
        <TextView
            android:id="@+id/title_faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_gravity="center"
            android:fontFamily="@font/notosansbold"
            />
    </LinearLayout>

    <!-- Scrollable FAQ Section -->

    <ScrollView
        android:id="@+id/scrollView_faq"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_section"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FAQ Item 1 -->
            <LinearLayout
                android:id="@+id/faq_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/faq_item_background"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp">

                <!-- Question Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:fontFamily="@font/notosansbold"
                        android:text="Do I need to register to place orders?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <ImageView
                        android:id="@+id/faq_icon_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Expand/Collapse Icon"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/primary" />

                </LinearLayout>

                <!-- Answer Section -->
                <TextView
                    android:id="@+id/faq_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:padding="8dp"
                    android:text="Register simply by setting up an email address and a password. Sign in to view what is already in your shopping cart."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 2 -->
            <LinearLayout
                android:id="@+id/faq_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/faq_item_background"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp">

                <!-- Question Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:fontFamily="@font/notosansbold"
                        android:text="How do I register?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/faq_icon_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Expand/Collapse Icon"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/primary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:padding="8dp"
                    android:text="You can register by signing up with your email or using third-party options such as Facebook or Google."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 3 -->
            <LinearLayout
                android:id="@+id/faq_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/faq_item_background"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp">

                <!-- Question Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:fontFamily="@font/notosansbold"
                        android:text="How do I change my name on the app?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/faq_icon_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Expand/Collapse Icon"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/primary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:padding="8dp"
                    android:text="You can register by signing up with your email or using third-party options such as Facebook or Google."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 2 -->
            <LinearLayout
                android:id="@+id/faq_item_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/faq_item_background"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp">

                <!-- Question Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:fontFamily="@font/notosansbold"
                        android:text="How do I delete a group?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/faq_icon_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Expand/Collapse Icon"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/primary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:padding="8dp"
                    android:text="You can register by signing up with your email or using third-party options such as Facebook or Google."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- FAQ Item 5 -->
            <LinearLayout
                android:id="@+id/faq_item_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/faq_item_background"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp">

                <!-- Question Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:fontFamily="@font/notosansbold"
                        android:text="Do I need to pay for the app?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/faq_icon_5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Expand/Collapse Icon"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/primary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:padding="8dp"
                    android:text="You can register by signing up with your email or using third-party options such as Facebook or Google."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/subtitle_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need answers? Find them here..."
        android:fontFamily="@font/notosansregular"
        android:textSize="18sp"
        android:textColor="@color/primary"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/scrollView_faq"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>