<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/small_round_white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/modal_dialog_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/archivo_variable"
            android:text="Are you sure you want delete this group?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/modal_dialog_cancel_button"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/round_profile_gray"
                android:backgroundTint="@color/background"
                android:text="Cancel"
                android:textSize="12sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/modal_dialog_confirm_button"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/round_square_primary"
                android:text="Confirm"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>