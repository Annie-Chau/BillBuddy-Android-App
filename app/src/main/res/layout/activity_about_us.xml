<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for AboutUsActivity with a fixed Return Button -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Return Button -->
    <ImageButton
        android:id="@+id/button_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Return"
        android:src="@drawable/ic_return_arrow_icon"
        android:tint="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView_about_us"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/button_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/about_us_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BillBuddy"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:fontFamily="@font/kavoon"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal" />

            <!-- Description -->
            <!-- Description -->
            <TextView
                android:id="@+id/about_us_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to BillBuddy, where splitting expenses is no longer a hassle! Our mission is to make managing shared expenses simple, transparent, and stress-free. Whether youâ€™re splitting a meal with friends, managing household costs, or organizing group activities, BillBuddy is designed to keep everyone on the same page.\n\nBillBuddy is brought to you by Key Lime Pie, a team of four dedicated and innovative developers passionate about solving everyday problems with technology. Hereâ€™s a little about us:\n â€¢ Hao Pham: A visionary developer with a knack for turning ideas into user-friendly solutions.\n â€¢ Chau Nguyen: The teamâ€™s creative powerhouse, bringing design and functionality together seamlessly.\n â€¢ Phuoc Dinh: Our tech guru, ensuring the app runs efficiently and securely.\n â€¢ Khuong Nguyen: The problem-solver who focuses on delivering features that users truly need.\n\nTogether, weâ€™ve combined our diverse skills and shared passion for creating meaningful tools to bring BillBuddy to life. Weâ€™re excited to help you simplify your financial interactions, making every shared experience more enjoyable and fair.\n\nThank you for choosing BillBuddy. With Key Lime Pie, life just got a little sweeter! ðŸ°âœ¨"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="8dp"
                android:lineSpacingMultiplier="1.2" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Footer -->
            <LinearLayout
                android:id="@+id/footer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Contact Email -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mail_icon"
                        android:tint="@color/primary"
                        android:contentDescription="Email Icon"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/contact_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Email: team@keylimepie.com"
                        android:textSize="18sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Location/Address -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location_icon"
                        android:tint="@color/primary"
                        android:contentDescription="Location Icon"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/location_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: 1234 Elm Street, Springfield, USA"
                        android:textSize="18sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Release Date -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar_icon"
                        android:tint="@color/primary"
                        android:contentDescription="Release Date Icon"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Release Date: January 12, 2025"
                        android:textSize="18sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>