<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/expense_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/item_icon_round_corners"
            android:backgroundTint="@color/primary"
            android:padding="10dp"
            android:src="@drawable/ic_person_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
            android:id="@+id/expense_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Expense Name"
            android:textSize="18sp"
            android:fontFamily="@font/notosansbold"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/paid_by"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/notosansregular"
            android:text="Paid by: User Name shdfuhsdufhusdf"
            android:ellipsize="end"
            android:maxLines="1"
            />

    </LinearLayout>

        <TextView
            android:id="@+id/expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosansbold"
            android:textColor="@color/black"
            android:text="$100.00"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:background="@drawable/item_expense_button"
        android:paddingVertical="6dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/to_view_expense"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Expense"
            android:textColor="@color/white"
            android:fontFamily="@font/notosansbold"
            android:textSize="13sp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>