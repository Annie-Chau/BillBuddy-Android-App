<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingBottom="30dp"
    tools:context=".AddExpense">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add_expense_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/notosansregular"
            android:text="Cancel"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/add_expense_enter_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="E.g. Drinks"
                    android:padding="12dp"
                    android:background="@drawable/input_background"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <ImageButton
                    android:id="@+id/add_expense_btn_emoji"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/input_background"
                    android:src="@drawable/ic_smiley_face_icon"
                    android:contentDescription="Emoji Icon"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/add_expense_btn_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/input_background"
                    android:src="@drawable/ic_camera_icon"
                    android:contentDescription="Camera Icon"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Notes Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:background="@drawable/search_box_background"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/add_expense_description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Write notes"
                    android:background="@drawable/no_background"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="start|top"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Amount Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Spinner
                    android:id="@+id/add_expense_sp_currency"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown_selection_background"
                    android:drawableEnd="@drawable/ic_dropdown_arrow"
                    android:padding="12dp"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/add_expense_money_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"
                    android:hint="Amount"
                    android:layout_marginStart="10dp"
                    android:inputType="numberDecimal"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Paid by and Date Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid by"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/add_expense_sp_paidBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dropdown_selection_background"
                        android:drawableEnd="@drawable/ic_dropdown_arrow"
                        android:padding="12dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/input_background"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/add_expense_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5 Dec 2024"
                            android:textSize="16sp"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/iv_calendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_calendar_icon"
                            android:contentDescription="Calendar Icon" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/add_expense_btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Add"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>