<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="32dp"
    android:paddingBottom="16dp"
    android:background="@color/white"
    tools:context=".AddUserInfo">

    <TextView
        android:id="@+id/appLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kavoon"
        android:text="BillBuddy"
        android:textSize="36sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_variable"
        android:text="Add Information."
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_variable"
        android:text="Help us get to know you better!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_gray"
        android:layout_marginBottom="36dp"/>

    <!-- Avatar Section -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="20dp"
            android:src="@drawable/person_icon"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_background" />

        <ImageButton
            android:id="@+id/change_avatar_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/camera_icon"
            android:layout_alignTop="@id/user_avatar"
            android:layout_alignEnd="@id/user_avatar"
            android:contentDescription="Change Avatar"
            android:background="@android:color/transparent"
            app:tint="@color/primary" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_variable"
        android:text="@string/name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/sign_up_name_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:height="40dp"
        android:background="@color/text_field_background_color"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="8dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/archivo_variable"
        android:hint="@string/enter_your_name"
        android:padding="8dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_variable"
        android:text="@string/phone_number"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/sign_up_phone_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:height="40dp"
        android:background="@color/text_field_background_color"
        android:drawableStart="@drawable/call_icon"
        android:drawablePadding="8dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/archivo_variable"
        android:inputType="phone"
        android:hint="@string/enter_your_phone_number"
        android:padding="8dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signup_confirm_button"
        app:cornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        android:paddingVertical="12dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>