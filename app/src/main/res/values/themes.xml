<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BillBuddy" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor" tools:targetApi="1" tools:ignore="ObsoleteSdkInt">
            @color/background
        </item>
        <item name="android:navigationBarColor" tools:targetApi="1" tools:ignore="ObsoleteSdkInt">
            @color/bottom_navigation
        </item>
    </style>

    <style name="Theme.BillBuddy" parent="Base.Theme.BillBuddy" />
    <style name="MyDateTimePickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MyPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyNegativeButton</item>
    </style>
    <style name="MyPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="MyNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>