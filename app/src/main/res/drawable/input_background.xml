<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer 1 (Dark and Close) -->
    <item>
        <shape>
            <solid android:color="#0D000000" /> <!-- Darker shadow color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Border color -->
        </shape>
    </item>

</layer-list>
