<!-- res/drawable/card_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/primary" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#DDDDDD" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Default (unselected) state -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#DDDDDD" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
