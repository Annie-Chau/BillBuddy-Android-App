<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#D9D9D9" /> <!-- Shadow color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item android:top="2dp" android:left="2dp"> <!-- Offset shadow to the bottom-right -->
        <shape>
            <solid android:color="#F8F8F8" /> <!-- Background color -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Dropdown Icon Layer -->
    <item android:drawable="@drawable/ic_dropdown_arrow" android:right="16dp" android:gravity="end|center_vertical" />

</layer-list>
